{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^3.13.2",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.0.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "start": "npx lerna run --parallel start:dev",
    "build": "npm run build:prod",
    "build:prod": "npx lerna run --parallel build:prod",
    "build:stage": "npx lerna run --parallel build:stage",
    "test": "npx lerna run --parallel test",
    "switch:stage": "npx lerna run --parallel switch:stage",
    "switch:prod": "npx lerna run --parallel switch:prod"
  },
  "dependencies": {
    "@types/node": "^11.13.4",
    "typescript": "^3.4.3"
  }
}
